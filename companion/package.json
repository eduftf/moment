{
  "name": "moment-capture",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "moment-capture": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --target=node22 --format=cjs --outfile=dist/companion-bundle.cjs",
    "build:binary": "npm run build:bundle && npx @yao-pkg/pkg dist/companion-bundle.cjs --compress GZip --output dist/moment-companion",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.13",
    "esbuild": "^0.27.3",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
